extends layout

block content
  link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
  h1 Reviews
  if reviews.length == 0
    h2 N√£o existem reviews para aprovar
  else
    each item in reviews
      div
        h2= item.date.toDateString().slice(4)
        if item.type == 0
          h3= "Acord√£o Adicionado"
        if item.type == 1
          h3= "Acord√£o Editado"
        if item.type == 2
          h3= "Acord√£o Apagado"
        if item.type == 3
          h3= "Sugest√£o de Edi√ß√£o"
        div
        h3= item.username
        ul
          li
            | Fields:
            ul
                each field in item.fields
                  li
                    | #{field.field}:
                    ul
                      li Old: #{field.old}
                      li New: #{field.new}
        div.button-row
          if item.type == 1
            form(action=`/acordaos/rejectUpdate/${item.acordaoId}`, method="POST")
              input(type="hidden", name="updateId", value=item._id)
              button(type="submit")
